<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="WeLive.AboutPage" xmlns:vm="clr-namespace:WeLive;" Title="{Binding Title}">
	<ContentPage.BindingContext>
		<vm:AboutViewModel />
	</ContentPage.BindingContext>


		<ScrollView Grid.Row="1">
			<StackLayout Orientation="Vertical" Padding="16,40,16,40" Spacing="10">
				
                <Button Margin="0,10,0,0" Text="退出登录（logout)" Command="{Binding SignOutCommand}" BackgroundColor="{StaticResource Primary}" TextColor="White" />
				<Button Margin="0,10,0,0" Text="关于我们(About us)" Command="{Binding OpenWebCommand}" BackgroundColor="{StaticResource Primary}" TextColor="White" />
			</StackLayout>
		</ScrollView>

</ContentPage>
